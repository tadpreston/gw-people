<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui image header">
      <%= render "layouts/logo" %>
      <div class="content">
        Sign up for an account
      </div>
    </h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "ui large form" }) do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail address" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
          </div>
        </div>
        <%= f.submit "Register", class: "ui fluid large blue submit button" %>
      </div>

      <div class="ui error message"></div>

    <% end %>

    <div class="ui message">
      Already have an account? <%= link_to "Sign In", new_user_session_path %>
    </div>
  </div>
</div>
